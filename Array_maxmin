Finding the maximum and minimum of an array

def max_min(arr):
    print("Maximin element:",max(arr))
    print("Minimum element:",min(arr))
    
n = int(input())
num = list(map(int,input().split()))
arr = np.array(num)
max_min(arr)

(or)

def max_min(arr):
    arr.sort()
    print("Minimum:",arr[0],"\nMaximum:",arr[-1])
    
n = int(input())
num = list(map(int,input().split()))
arr = np.array(num)
max_min(arr)
